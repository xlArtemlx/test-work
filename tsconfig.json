{
  "compilerOptions": {
    "downlevelIteration": true,
    "sourceMap": false,
    "baseUrl": "src",
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "navigation/*": ["./navigation/*"],
      "services/*": ["./services/*"],
      "store/*": ["./store/*"],
      "modules/*": ["./modules/*"],
      "types/*": ["./types/*"],
      "modals/*": ["./modals/*"],
    },
  },
  "include": [
    "src/**/**/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
